            { "e":"span", "t":"在 EC2 上安裝 MySQL，輸入指令：" },
            { "e":"code", "t":"sudo apt -y install mysql-server mysql-client", "copy":"sudo apt -y install mysql-server mysql-client" }
          ]
        },
        {
          "e":"li",
          "s":[
            { "e":"span", "t":"途中會需要你輸入密碼與確認密碼，輸入密碼過程中不會顯示，請不要驚訝，輸入完後按下 " },
            { "e":"code", "t":"enter" },
            { "e":"span", "t":" 即可。" }
